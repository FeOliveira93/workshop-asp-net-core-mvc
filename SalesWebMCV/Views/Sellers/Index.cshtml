@model  IEnumerable<SalesWebMCV.Models.Seller>;

@{
    ViewData["Title"] = "Index";
}

<h2>Sellers</h2>

<p>Sellers index Page</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.BirthDate)</th>
            <th>@Html.DisplayNameFor(model => model.Salary)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(model => item.Name)</td>
            <td>@Html.DisplayFor(model => item.Email)</td>
            <td>@Html.DisplayFor(model => item.BirthDate)</td>
            <td>@Html.DisplayFor(model => item.Salary)</td>
            <td>
                <a asp-action="Edit" asp-route="@item.Id">Edit</a>
                <a asp-action="Details" asp-route="@item.Id">Details</a>
                <a asp-action="Delete" asp-route="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
